---
interface Props {
  title: string;
  message: string;
}

const { title, message } = Astro.props;
---

<div
  id="toast"
  class="fixed top-0 m-2 z-50 w-full max-w-md rounded-md bg-gray-700 p-4 shadow-lg transition-all duration-300 ease-in-out"
>
  <div class="flex items-center">
    <div
      class="mr-4 flex h-8 w-8 items-center justify-center rounded-full bg-green-500"
    >
      <svg
        height="32"
        width="32"
        xml:space="preserve"
        xmlns="http://www.w3.org/2000/svg"
        overflow="visible"
      >
        <circle cx="16" cy="16" r="16" fill="#d72828"></circle>
        <path d="M14.5 25h3v-3h-3v3zm0-19v13h3V6h-3z" fill="#e6e6e6"></path>
      </svg>
    </div>
    <div class="flex-1">
      <h3 class="text-sm font-medium text-white">{title}</h3>
      <p class="text-sm text-gray-400">
        {message}
      </p>
    </div>
  </div>
</div>

<script is:inline>
  const toast = document.getElementById("toast");
  setTimeout(() => {
    toast.classList.add("hidden");
  }, 3000);
</script>
