---
interface Props {
  title: string;
  message: string;
}

const { title, message } = Astro.props;
---

<div
  id="toast"
  class="fixed top-0 m-2 z-50 w-full max-w-md rounded-md bg-gray-700 p-4 shadow-lg transition-all duration-300 ease-in-out"
>
  <div class="flex items-center">
    <div
      class="mr-4 flex h-8 w-8 items-center justify-center rounded-full bg-green-500"
    >
      <svg
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="h-5 w-5 text-white"
      >
        <path d="M20 6 9 17l-5-5"></path>
      </svg>
    </div>
    <div class="flex-1">
      <h3 class="text-sm font-medium text-white">{title}</h3>
      <p class="text-sm text-gray-400">
        {message}
      </p>
    </div>
  </div>
</div>

<script is:inline>
  const toast = document.getElementById("toast");
  setTimeout(() => {
    toast.classList.add("hidden");
  }, 3000);
</script>
